<h1>ユーザ一詳細</h1>

<ul>
    <li><%= image_tag @user.thumbnail, size: "200x200" %></li>
    <li><%= @user.id %></li>
    <li><%= @user.name %></li>
    <li><%= @user.email %></li>
</ul>

<%= link_to "アイテムを登録する！", new_cloth_path , class: "button" %>

<% @cloths.each do |cloth| %>
    <ul>
        <li><%= image_tag cloth.thumbnail, size: "100x100" %></li>
        <li><%= cloth.name %></li>
        <li><%= link_to "編集",  "#", class: "button" %></li>
        <li><%= link_to "削除",  cloth_path(cloth), method: :delete, class: "button" %></li>
    </ul>
<% end %>
