<h1>ユーザ一覧</h1>
<% @users.each do |user| %>
    <ul>
        <li><%= link_to image_tag(user.thumbnail, size: "100x100"), user %></li>
        <li><%= user.id %></li>
        <li>ユーザ名：<%= user.name %></li>
        <% if current_user.admin?  %>
            <li><%= link_to "編集",  edit_user_path(user), class: "button" %></li>
            <li><%= link_to "削除",  user_path(user), method: :delete, class: "button" %></li>
        <% end %>
    </ul>
<% end %>