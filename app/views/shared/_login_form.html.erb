<div class="login_form">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <div class="login_mail form">
            <i class="envelope icon"></i>
            <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="login_pass form">
            <i class="key icon"></i>
            <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="login_submit form">
            <%= f.submit "Sign In", class: "login_button" %>
        </div>
    <% end %>
    <div class="login_signnup form">
        <p><%= link_to "Sign Up", signup_path , class: "new_button"%></p>
    </div>

    <div class="login_signnup form">
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
            <%= f.hidden_field :email, value: 'kondo8363@gmail.com' %>
            <%= f.hidden_field :password, value: 'password' %>
            <%= f.submit "テストユーザでログインする", class: "login_button" %>
        <% end %>
    </div>
</div>